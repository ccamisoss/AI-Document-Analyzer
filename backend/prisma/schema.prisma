
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Document model: stores uploaded documents/text
model Document {
  id        String    @id @default(cuid())
  userId   String?
  content   String // The text content of the document
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  analyses Analysis[]
  User     User?      @relation(fields: [userId], references: [id])

  @@map("documents")
}

// Analysis model: stores AI analysis results
model Analysis {
  id            String   @id @default(cuid())
  documentId    String
  userPrompt    String?
  result        Json   // Structured AI output
  status        String // "discarded" | "final"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt


  // Relations
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@map("analyses")
}

// User model
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  documents Document[]
}
